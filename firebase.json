{
  "database": {
    "rules": "firebase-config/firebase.database.rules.json"
  },
  "firestore": {
    "rules": "firebase-config/firebase.firestore.rules",
    "indexes": "firebase-config/firebase.firestore.indexes.json"
  },
  "functions": {
    "source": "./",
    "runtime": "nodejs16",
    "ignore": [
      "nx.json",
      "project.json",
      "workspace.json",
      "tools/**/*.{ts,tsx,sh,ps1,mjs,js}",
      "dist/packages/**/*",
      "dist/apps/load-test/**",
      "dist/apps/my-*/**",
      "packages/**/*.{json,js,ts,tsx,jsx,mjs}",
      "apps/**/*.{json,js,ts,tsx,jsx,mjs,yaml,yml,xml}",
      "docs/**/*.{py,png,jpg}",
      "**/firebase.json",
      "**/firebase-config/*",
      "**/node_modules/**",
      "**/tsconfig.**",
      "**/tsconfig-**",
      "**/src/**",
      "**/Dockerfile",
      "**/Dockerfile-**",
      "**/coverage/**",
      "**/load-test-summary/**",
      "**/test/**",
      "**/tmp/**",
      "**/.*",
      "**/*.md",
      "**/*.log",
      "**/*.ts",
      "**/*.tsx",
      "**/*.tf",
      "**/*.tfvars",
      "**/*.hcl",
      "**/*.backup",
      "**/*.yaml",
      "**/*.sh",
      "**/*.ps1",
      "**/*.yml",
      "**/*.xml",
      "**/*.py",
      "**/*.jpg",
      "**/*.png"
    ]
  },
  "hosting": [
    {
      "target": "app",
      "public": "dist/apps/my-angular-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "helloWorld"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "storage": {
    "rules": "firebase-config/firebase.storage.rules"
  },

  "emulators": {
    "hosting": {
      "port": 5001,
      "host": "localhost",
      "enabled": true
    },
    "auth": {
      "port": 5002,
      "host": "localhost",
      "enabled": true
    },
    "functions": {
      "port": 5003,
      "host": "localhost",
      "enabled": true
    },
    "firestore": {
      "port": 5004,
      "host": "localhost",
      "enabled": true
    },
    "database": {
      "port": 5005,
      "host": "localhost",
      "enabled": true
    },
    "storage": {
      "port": 5006,
      "host": "localhost",
      "enabled": true
    },
    "pubsub": {
      "port": 5007,
      "host": "localhost",
      "enabled": true
    },
    "eventarc": {
      "port": 5008,
      "host": "localhost",
      "enabled": true
    },
    "ui": {
      "port": 9595,
      "host": "localhost",
      "enabled": true
    }
  }
}
